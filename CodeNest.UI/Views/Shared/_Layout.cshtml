    <script>
        $(document).ready(function () {
            // Show the modal when the page loads
            $('#workspaceModal').modal('show');

            // Handle the create workspace button click
            $('#createWorkspaceBtn').click(function () {
                const workspaceName = $('#workspaceName').val();
                if (workspaceName) {
                    // Logic to create workspace goes here
                    alert('Workspace "' + workspaceName + '" created!');
                    $('#workspaceModal').modal('hide');
                } else {
                    alert('Please enter a workspace name.');
                }
            });
            // Hover to show and hide the collapse panels
            $('.jsonlint-link').hover(function () {
                var target = $(this).data('target');
                $(target).collapse('show');
            }, function () {
                var target = $(this).data('target');
                $(target).collapse('hide');
            });
        });
        $('.jsonlint-link').click(function (e) {
            var href = $(this).attr('href');
            if (href && href !== '#') {
                window.location.href = href;
            }
            e.preventDefault(); // Prevent Bootstrap's default collapse behavior on click
        });
    </script>
